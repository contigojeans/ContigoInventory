<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#8C3D3D"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barcode_text"
        android:layout_width="403dp"
        android:layout_height="200dp"
        android:layout_below="@id/surface_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fadingEdge="horizontal|vertical"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:text="Scan Barcode"
        android:gravity="top"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/barcode_count"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_above="@id/barcode_text"
        android:layout_centerInParent="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="337dp"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/add_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcode_text"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="#4CAF50"
        android:enabled="false"
        android:text="ADD STOCK"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_text" />

    <Button
        android:id="@+id/stock_audit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcode_text"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="63dp"
        android:backgroundTint="#4CAF50"
        android:enabled="false"
        android:text="STOCK Audit"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_text" />

    <Button
        android:id="@+id/sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcode_text"
        android:layout_centerInParent="true"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/add_stock"
        android:backgroundTint="#C32525"
        android:enabled="false"
        android:text="       sell     "
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_text" />

    <Button
        android:id="@+id/manual_add_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcode_text"
        android:layout_centerInParent="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="59dp"
        android:layout_toRightOf="@id/add_stock"
        android:backgroundTint="#C32525"
        android:text="Manual Add"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_text" />

    <Button
        android:id="@+id/clear_barcodes"
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:layout_below="@id/surface_view"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@id/barcode_text"
        android:backgroundTint="#DA3A3A"
        android:enabled="false"
        android:text="X"
        android:translationZ="10dp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="363dp"
        tools:layout_editor_absoluteY="421dp" />

</RelativeLayout>